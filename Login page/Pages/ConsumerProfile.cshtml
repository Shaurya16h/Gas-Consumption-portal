@page
@model Login_page.Pages.ConsumerProfileModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Consumer Profile - Smart Gas Portal</title>
    <link rel="stylesheet" href="~/css/Dashboard.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <!-- Navbar -->
    <div class="top-nav">
        <div class="nav-left">User Profile</div>
        <div class="nav-right">
            <a href="/Dashboard">Dashboard</a>
            <i class="fa fa-bell"></i>
        </div>
    </div>

        <!-- Welcome Message -->
        <div class="welcome">
            <h1>Welcome Back! @Model.CurrentUser.Name</h1>
        </div>

        <!-- Main Dashboard Container -->
        <div class="dashboard-content">

            <!-- BLUE CARD -->
            <div class="card blue">
                <p>CONSUMER NUMBER</p>
                <h3>@Model.CurrentUser.ConsumerNumber</h3>
                <p>METER SERIAL NO.</p>
                <h4>@Model.CurrentUser.MeterSerialNumber</h4>

                <div class="info">
                    <div>
                        <p>CONSUMPTION</p>
                        <strong>83 Units</strong>
                    </div>
                </div>

                <button>Recharge</button>
            </div>

        </div>

</body>
</html>
