@page
@model Login_page.Pages.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Smart Gas Portal Login</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            margin: 0;
            padding: 0;
            overflow-x: hidden; /* Prevent horizontal scroll */
        }

        .bg-image {
            background-image: url('https://placehold.co/1920x1080/E0E0E0/000000?text=Background+Image+Placeholder'); /* Placeholder image */
            background-size: cover;
            background-position: center;
            filter: blur(5px); /* Apply blur effect */
            -webkit-filter: blur(5px); /* For Safari */
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1; /* Send to background */
        }

        .content-overlay {
            position: relative;
            z-index: 1;
            background-color: rgba(255, 255, 255, 0.4); /* Semi-transparent white overlay */
            min-height: 100vh; /* Ensure it covers full viewport height */
            display: flex;
            flex-direction: column;
        }

        .captcha-input-group {
            display: flex;
            align-items: center;
            gap: 8px; /* Space between elements */
        }
    </style>
</head>
<body class="bg-gray-100">
    <div class="bg-image"></div>
    <div class="content-overlay flex flex-col min-h-screen">
        <!-- Header -->
        <header class="w-full bg-white bg-opacity-80 shadow-sm py-4 px-6 md:px-12 flex flex-col md:flex-row items-center justify-between rounded-b-lg">
            <div class="flex items-center mb-4 md:mb-0">
                <img src="https://placehold.co/40x40/007bff/ffffff?text=GAS" alt="GAS Logo" class="h-10 w-10 mr-3 rounded-full">
                <span class="text-2xl font-bold text-blue-700">GAS</span>
            </div>
            <nav class="flex flex-wrap justify-center md:justify-end space-x-4">
                <a href="#" class="text-gray-700 hover:text-blue-600 px-3 py-1 rounded-md transition-colors duration-200">Contact</a>
                <a href="#" class="text-gray-700 hover:text-blue-600 px-3 py-1 rounded-md transition-colors duration-200">FAQs</a>
                <a href="#" class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition-colors duration-200 shadow-md">Quick Pay</a>
            </nav>
        </header>

        <!-- Main Content Area -->
        <main class="flex-grow flex items-center justify-center p-4 md:p-8">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 w-full max-w-6xl bg-white bg-opacity-90 rounded-xl shadow-2xl p-6 md:p-10">
                <!-- Left Section: Smart Gas Portal Info -->
                <div class="flex flex-col justify-center text-center lg:text-left p-4">
                    <h1 class="text-4xl md:text-5xl font-extrabold text-blue-800 mb-4 leading-tight">Smart Gas Portal</h1>
                    <p class="text-gray-700 text-lg md:text-xl mb-6">
                        Smart Gas Portal facilitates consumers to view their gas consumption, bill and payment information in one go.
                    </p>
                    <a href="/Register" class="bg-blue-600 text-white px-8 py-3 rounded-full text-lg font-semibold hover:bg-blue-700 transition-colors duration-200 shadow-lg self-center lg:self-start flex items-center justify-center">
                        Register <span class="ml-2">&rarr;</span>
                    </a>
                </div>

                <!-- Right Section: Consumer Login Form -->
                <div class="bg-white p-6 md:p-8 rounded-xl shadow-lg flex flex-col items-center max-w-md mx-auto w-full">
                    <div class="flex items-center mb-6">
                        <img src="https://placehold.co/30x30/007bff/ffffff?text=GAS" alt="GAS Logo" class="h-8 w-8 mr-2 rounded-full">
                        <h2 class="text-2xl font-bold text-blue-700">Consumer Login</h2>
                    </div>
                    <form method="post" class="w-full">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
                        <div class="mb-4">
                            <label for="username" class="block text-gray-700 text-sm font-bold mb-2">Username</label>
                            <input type="text" id="username" asp-for="Input.Username" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Enter your username">
                            <span asp-validation-for="Input.Username" class="text-danger text-xs italic"></span>
                        </div>
                        <div class="mb-6">
                            <label for="password" class="block text-gray-700 text-sm font-bold mb-2">Password</label>
                            <input type="password" id="password" asp-for="Input.Password" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" placeholder="********">
                            <span asp-validation-for="Input.Password" class="text-danger text-xs italic"></span>
                        </div>
                        <div class="flex items-center justify-between">
                            <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline transition-colors duration-200">
                                Sign In
                            </button>
                            <a href="#" class="inline-block align-baseline font-bold text-sm text-blue-600 hover:text-blue-800">Forgot Password?</a>
                        </div>
                    </form>
                </div>
            </div>
        </main>

        <!-- Bottom Call-to-Action Buttons -->
        <section class="w-full flex justify-center py-8 px-4 bg-white bg-opacity-80 rounded-t-lg shadow-inner">
            <div class="flex flex-wrap justify-center gap-6 max-w-4xl w-full">
                <button class="flex flex-col items-center bg-blue-700 text-white px-6 py-4 rounded-xl shadow-lg hover:bg-blue-800 transition-colors duration-200 w-full sm:w-auto flex-1 min-w-[200px] max-w-[300px]">
                    <span class="text-2xl font-bold mb-1">1800 233 1507</span>
                    <span class="text-sm">24 x 7 Toll Free Number</span>
                </button>
                <button class="flex flex-col items-center bg-blue-700 text-white px-6 py-4 rounded-xl shadow-lg hover:bg-blue-800 transition-colors duration-200 w-full sm:w-auto flex-1 min-w-[200px] max-w-[300px]">
                    <span class="text-2xl font-bold mb-1 flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                        </svg>
                        Pay Bills
                    </span>
                    <span class="text-sm">Pay your bill online</span>
                </button>
                <button class="flex flex-col items-center bg-blue-700 text-white px-6 py-4 rounded-xl shadow-lg hover:bg-blue-800 transition-colors duration-200 w-full sm:w-auto flex-1 min-w-[200px] max-w-[300px]">
                    <span class="text-2xl font-bold mb-1 flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                        </svg>
                        Analyze
                    </span>
                    <span class="text-sm">your gas consumption</span>
                </button>
            </div>
        </section>

        <!-- Bottom Slider/Indicator (Mock-up) -->
        <div class="w-full flex justify-center py-3 bg-gray-800 text-white text-sm rounded-t-lg">
            <div class="flex items-center space-x-2">
                <div class="w-4 h-1 bg-gray-500 rounded-full"></div>
                <div class="w-8 h-1 bg-white rounded-full"></div>
                <div class="w-4 h-1 bg-gray-500 rounded-full"></div>
                <span>12</span>
            </div>
        </div>
    </div>
</body>
</html>