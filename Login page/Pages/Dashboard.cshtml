@page
@model Login_page.Pages.DashboardModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Dashboard - Smart Gas Portal</title>
    <link rel="stylesheet" href="~/css/Dashboard.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/echarts@5.4.3/dist/echarts.min.js"></script>
</head>
<body>

    <!-- Navbar -->
    <div class="top-nav">
        <div class="nav-left">Smart Gas Portal</div>
        <div class="nav-center">
            <a asp-page="/ConsumerProfile">Consumer Profile</a>
        </div>
        <div class="nav-right">
            <a href="/Login">Logout</a>
            <i class="fa fa-bell"></i>
        </div>
    </div>

    @if (Model.CurrentUser != null)
    {
        <!-- Welcome Message -->
        <div class="welcome">
            Welcome <strong>@Model.CurrentUser.Name</strong>
        </div>

        <!-- Main Dashboard Container -->
        <div class="dashboard-content">

            <!-- BLUE CARD -->
            <div class="card blue">
                <p>CONSUMER NUMBER</p>
                <h3>@Model.CurrentUser.ConsumerNumber</h3>
                <p>METER SERIAL NO.</p>
                <h4>@Model.CurrentUser.MeterSerialNumber</h4>

                <div class="circle">
                    Balance Amount <br>(Rs)<br>@Model.CurrentUser.BalanceAmount
                </div>

                <div class="info">
                    <div>
                        <p>CONSUMPTION</p>
                        <strong>83 Units</strong>
                    </div>
                    <div>
                        <p>VALVE STATUS</p>
                        <strong>Closed</strong>
                    </div>
                </div>

                <button>Recharge</button>
            </div>

            <!-- GAS CARD -->
            <div class="card gas">
                <h4>GAS CONSUMPTION</h4>
                <p>This gas consumption graph provides an overview of your gas usage patterns over a specific period of time.</p>

                <div class="filters">
                    <input type="text" value="Jul 6, 2025 - Jul 15, 2025" readonly />
                    <select>
                        <option>Daily</option>
                        <option>Weekly</option>
                        <option>Monthly</option>
                    </select>
                </div>
                <div id="main" style="width: 600px;height:400px;"></div>
            </div>

        </div>
    }
    else
    {
        <div class="welcome">
            <p>Please log in to view your dashboard.</p>
        </div>
    }

    <div id="main" style="width: 600px;height:400px;"></div>
    <script type="text/javascript">
      // Initialize the echarts instance based on the prepared dom
      var myChart = echarts.init(document.getElementById('main'));

      // Specify the configuration items and data for the chart
      var option = {
        title: {
          text: 'Gas consumption'
        },
        tooltip: {},
        legend: {
          data: ['Gas consumption']
        },
        xAxis: {
          data: ['Feb', 'March', 'April', 'May', 'June', 'July']
        },
        yAxis: {},
        series: [
          {
            name: 'Gas consumption',
            type: 'bar',
            data: [5, 20, 36, 10, 10, 2]
          }
        ]
      };

      // Display the chart using the configuration items and data just specified.
      myChart.setOption(option);
    </script>
  </body>
</html>